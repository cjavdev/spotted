module Spotted
  module Errors
    class Error < StandardError
      attr_accessor cause: StandardError?
    end

    class ConversionError < Spotted::Errors::Error
      def cause: -> StandardError?

      def initialize: (
        on: Class,
        method: Symbol,
        target: top,
        value: top,
        ?cause: StandardError?
      ) -> void
    end

    class APIError < Spotted::Errors::Error
      attr_accessor url: URI::Generic

      attr_accessor status: Integer?

      attr_accessor headers: ::Hash[String, String]?

      attr_accessor body: top?

      def initialize: (
        url: URI::Generic,
        ?status: Integer?,
        ?headers: ::Hash[String, String]?,
        ?body: Object?,
        ?request: nil,
        ?response: nil,
        ?message: String?
      ) -> void
    end

    class APIConnectionError < Spotted::Errors::APIError
      def initialize: (
        url: URI::Generic,
        ?status: nil,
        ?headers: ::Hash[String, String]?,
        ?body: nil,
        ?request: nil,
        ?response: nil,
        ?message: String?
      ) -> void
    end

    class APITimeoutError < Spotted::Errors::APIConnectionError
      def initialize: (
        url: URI::Generic,
        ?status: nil,
        ?headers: ::Hash[String, String]?,
        ?body: nil,
        ?request: nil,
        ?response: nil,
        ?message: String?
      ) -> void
    end

    class APIStatusError < Spotted::Errors::APIError
      def self.for: (
        url: URI::Generic,
        status: Integer,
        headers: ::Hash[String, String]?,
        body: Object?,
        request: nil,
        response: nil,
        ?message: String?
      ) -> instance

      def initialize: (
        url: URI::Generic,
        status: Integer,
        headers: ::Hash[String, String]?,
        body: Object?,
        request: nil,
        response: nil,
        ?message: String?
      ) -> void
    end

    class BadRequestError < Spotted::Errors::APIStatusError
      HTTP_STATUS: 400
    end

    class AuthenticationError < Spotted::Errors::APIStatusError
      HTTP_STATUS: 401
    end

    class PermissionDeniedError < Spotted::Errors::APIStatusError
      HTTP_STATUS: 403
    end

    class NotFoundError < Spotted::Errors::APIStatusError
      HTTP_STATUS: 404
    end

    class ConflictError < Spotted::Errors::APIStatusError
      HTTP_STATUS: 409
    end

    class UnprocessableEntityError < Spotted::Errors::APIStatusError
      HTTP_STATUS: 422
    end

    class RateLimitError < Spotted::Errors::APIStatusError
      HTTP_STATUS: 429
    end

    class InternalServerError < Spotted::Errors::APIStatusError
      HTTP_STATUS: Range[Integer]
    end
  end
end
